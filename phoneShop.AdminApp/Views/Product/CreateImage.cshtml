@model phoneShop.ViewModels.Catalog.Products.ProductImageCreateRequest
@{
    ViewData["Title"] = "CreateImage";
}

<div class="container-fluid">
    <h1 class="mt-4">Thêm hình ảnh</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="ListImage" asp-controller="Product" asp-route-Id="@ViewBag.Id">Danh sách ảnh</a></li>
        <li class="breadcrumb-item active">Thêm hình ảnh</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="ListImage" asp-controller="Product" asp-route-Id="@ViewBag.Id">Về danh sách ảnh</a>
        </div>

        <div class="card-body">
            <div class="col-md-4">
                <form method="post" enctype="multipart/form-data" asp-action="CreateImage" asp-controller="Product">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IsDefault" class="control-label"></label>
                        <input asp-for="IsDefault" class="form-check-inline" />
                        <span asp-validation-for="IsDefault" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label"></label>
                        <div class="custom-file">
                            <input type="file" asp-for="ImageFile" class="form-control custom-file-input" />
                            <label class="custom-file-label">Chọn file.......</label>
                        </div>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Thêm" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            });
        });
    </script>
}
