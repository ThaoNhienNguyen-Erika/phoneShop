}

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="products-tabs">
                <!-- tab -->
                <div id="tab1" class="tab-pane active">
                    <div id="tab1" class="tab-pane active">                        
                            @foreach (var item1 in cate.Take(3))
                            {
                                <!-- shop -->
                                <div class="col-md-4 col-xs-6">
                                    <div class="shop">
                                        <div class="shop-img">
                                            <img src="/img/Danh_muc.jpg" style="width:360px; height:260px;" alt="">
                                        </div>
                                        <div class="shop-body">
                                            <h3 class="text-uppercase">Các Sản Phẩm<br>@item1.Name</h3>
                                            <a asp-action="Category" asp-controller="Product" asp-route-id="@item1.Id" class="cta-btn">
                                                Xem Ngay 
                                                <i class="fa fa-arrow-circle-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!-- /shop -->
                            }                           
                        </div>
                       </div>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
<!-- /SECTION -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">Sản phẩm mới</h3>
                    <div class="section-nav">                        
                    </div>
                </div>
            </div>
            <!-- /section title -->
            <!-- Products tab & slick -->
            <div class="col-md-12">
                <div class="row">
                    <div class="products-tabs">
                        <!-- tab -->
                        <div id="tab1" class="tab-pane active">
                            <div class="products-slick" data-nav="#slick-nav-1">
                                <!-- product -->
                                @foreach (var item in Model.Items.OrderByDescending(x => x.Id).Take(6))
                                {
                                    <div class="product">
                                        <div class="product-img">
                                            <img src="@ViewBag.Url@item.ImagePath" asp-append-version="true" style="width:263px; height:263px;" alt="">
                                        </div>
                                        <div class="product-body">
                                            @foreach (var item1 in cate)
                                            {
                                                @if (item1.Id == item.categoryId)
                                                {
                                                    <p class="product-category">@item1.Name</p>
                                                }

                                            }
                                            <h3 class="product-name"><a href="#">@item.Name_Phone</a></h3>
                                            <h4 class="product-price">$@item.Price.ToString("N0") <del class="product-old-price">@item.Promotion_Price.ToString("N0")</del></h4>
                                            <div class="product-rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <div class="product-btns">
                                                <button class="quick-view" onclick="location.href='@Url.Action("Details", "Product", new { id = item.Id })'">
                                                    <i class="fa fa-eye"></i>
                                                    <span class="tooltipp">Xem sản phẩm</span>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="add-to-cart">
                                            <button class="add-to-cart-btn" onclick="location.href='@Url.Action("AddCart", "Cart", new { productId = item.Id })'">
                                                <i class="fa fa-shopping-cart"></i> 
                                                Thêm vào giỏ
                                            </button>
                                        </div>
                                    </div>
                                }
                                <!-- /product -->
                            </div>
                            <div id="slick-nav-1" class="products-slick-nav"></div>
                        </div>
                        <!-- /tab -->
                    </div>
                </div>
            </div>
            <!-- Products tab & slick -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
