@model phoneShop.ViewModels.Catalog.Order.OrderCreateRequest

@{
    ViewData["Title"] = "Payment";

    var cate = (List<phoneShop.ViewModels.Catalog.Categories.CategoryViewModel>)ViewBag.CategoryList;

    var cart = (List<phoneShop.WebApp.Models.CartItems>)ViewBag.Cart;
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb-tree">
                    <li><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
                    <li class="active">Thanh toán</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->
@if (cart.Count > 0)
{
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">

                <div class="col-md-7">
                    <!-- Billing Details -->
                    <div class="billing-details">
                        <div class="section-title">
                            <h3 class="title">Thông tin giao hàng</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Payment">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="name" class="control-label"></label>
                                        <input asp-for="name" class="form-control" />
                                        <span asp-validation-for="name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Address" class="control-label"></label>
                                        <input asp-for="Address" class="form-control" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Phone" class="control-label"></label>
                                        <input asp-for="Phone" class="form-control" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="mail" class="control-label"></label>
                                        <input asp-for="mail" class="form-control" />
                                        <span asp-validation-for="mail" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Thanh toán" class="primary-btn order-submit" />
                                    </div>
                                </form>
                            </div>
                        </div>


                    </div>
                    <!-- /Billing Details -->
                </div>
                <!-- Order Details -->
                <div class="col-md-5 order-details">
                    <div class="section-title text-center">
                        <h3 class="title">Đơn hàng của bạn</h3>
                    </div>
                    <div class="order-summary">
                        <div class="order-col">
                            <div><strong> Sản phẩm </strong></div>
                            <div><strong> Thành tiền </strong></div>
                        </div>
                        <div class="order-products">
                            @foreach (var item in cart)
                            {
                                <div class="order-col">
                                    <div>@item.Quantity x @item.Name_Phone</div>
                                    <div>$ @((item.Price * item.Quantity).ToString("N0"))</div>
                                </div>
                            }
                        </div>
                        <div class="order-col">
                            <div>Shiping</div>
                            <div><strong>Miễn phí</strong></div>
                        </div>
                        <div class="order-col">
                            <div><strong>Tổng tiền</strong></div>
                            <div><strong class="order-total">$@ViewBag.total</strong></div>
                        </div>
                    </div>
                </div>
                <!-- /Order Details -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
}
else
{
    <span class="alert alert-danger text-uppercase">Chưa có sản phẩm nào trong giỏ hàng</span>
}

